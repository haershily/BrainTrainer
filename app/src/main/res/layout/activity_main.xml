<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.harshil.braintrainer.MainActivity"
    android:backgroundTint="#90CAF9"
    android:background="@android:color/darker_gray"
    android:visibility="visible">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="5"
        android:id="@+id/startPage"
        android:orientation="vertical">
    <Button
        android:text="Play\nR u Ready ?"
        android:textSize="50dp"
        android:padding="20sp"
        android:layout_weight="2"

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:id="@+id/button"
        android:backgroundTint="#FFAB40"
        android:background="@color/colorAccent"
        android:onClick="start"
        android:visibility="visible"
        android:textColor="#3E2723" />
    <TextView
        android:text="Select Difficulty"
        android:textSize="30sp"
        android:layout_marginTop="20sp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content"
        android:id="@+id/selectdifficulty"
        />
    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:layout_gravity="top"
        android:id="@+id/spinner"
        android:padding="30sp"
        android:layout_weight="2"
        android:dropDownWidth="match_parent"
         />
</LinearLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:id="@+id/rel1">
   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:weightSum="2"
       android:id="@+id/ll1">
    <TextView
        android:text="30s"
        android:layout_weight="1"
        android:textSize="30sp"
        android:padding="15sp"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10sp"
        android:layout_alignParentStart="true"
        android:id="@+id/timerTextView"
        android:backgroundTint="#AED581"
        android:background="@android:color/holo_blue_bright"
        android:layout_width="match_parent"
        android:textColor="@android:color/black" />
    <TextView
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="0/0"
        android:textSize="30sp"
        android:layout_alignParentRight="true"
        android:padding="15sp"
        android:id="@+id/pointsTextView"
        android:background="#FF8A65"
        android:textColor="@android:color/black" />
</LinearLayout>
    <TextView
        android:text="31 + 12"
        android:layout_below="@id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/sumTextView"
        android:paddingTop="20sp"
        android:textSize="30sp"
        android:textColor="@android:color/black" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridLayout"
        android:layout_below="@+id/sumTextView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_margin="10sp"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:tag="0"
            android:id="@+id/button0"
            android:textSize="40sp"
            android:background="#FFAB40"
            android:onClick="chooseAnswer" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_margin="10sp"
            android:id="@+id/button1"

            android:layout_column="0"
            android:layout_row="1"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:tag="1"
            android:textSize="40sp"
            android:background="#FFAB40"
            android:onClick="chooseAnswer" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_margin="10sp"
            android:id="@+id/button2"

            android:layout_column="0"
            android:layout_row="2"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:tag="2"
            android:textSize="40sp"
            android:background="#FFAB40"
            android:onClick="chooseAnswer" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3"
            android:layout_column="0"
            android:layout_margin="10sp"
            android:layout_row="3"
            android:id="@+id/button3"

            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:layout_gravity="fill"
            android:tag="3"
            android:textSize="40sp"
            android:background="#FFAB40"
            android:onClick="chooseAnswer" />
    </LinearLayout>

    <TextView
        android:text=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/answer"
        android:textSize="50sp"
        android:layout_below="@+id/gridLayout"
        android:layout_centerHorizontal="true"
        android:padding="5sp"
        android:textColor="@android:color/holo_green_dark"
        />

    </RelativeLayout>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rel2"
    android:visibility="invisible">
    <TextView
        android:text="TextView"
        android:layout_width="match_parent"
        android:gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/finalAnswer"
        android:textSize="36sp"
        android:padding="10sp"
        android:textColor="@android:color/black" />

    <Button
        android:text="Play Again?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/playAgainButton"
        android:onClick="playAgainGo"
        android:textSize="40sp"
        android:padding="20sp"
        android:layout_below="@id/finalAnswer"
        android:layout_centerHorizontal="true"
        android:textColor="#3E2723"
        android:backgroundTint="#FFAB40" />
</RelativeLayout>
</RelativeLayout>